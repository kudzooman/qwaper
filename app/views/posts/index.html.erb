<h3>List of all the qwap:</h3>

<div class="page">
<%= will_paginate @posts %>
</div>

<% if policy(Post.new).create? %>
<%= link_to "Add more qwap!", new_post_path, class: "basic ui button" %>
<% end %>

<% @posts.each do |post| %>
<div class="qwap list">
  <p><%= post.body %></p>
</div>
<% if false %>
<div>
  <div>
    <%= link_to " ", post_up_vote_path, class: 'ui icon button' do %>
    <i class="hand up icon"></i>
  </div>
  <% end %>
  <div>
    <strong><%= post.points %></strong>
  </div>
  <div>
    <%= link_to " ", post_down_vote_path, class: 'ui icon button' do %>
    <i class="hand down icon"></i>
  </div>
  <% end %>
</div>
<% end %>
<small>
  qwaped <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name if post.user %>
</small>
<% end %>

<div class="page">
<%= will_paginate @posts %>
</div>
