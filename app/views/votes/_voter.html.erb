<% if policy( Vote.new ).create? %>
  <div>
    <div class="up">
      <%= link_to post_up_vote_path(post) do %>
      <i class="red triangle up icon "></i>
      <% end %>
    </div>

    <div class="points">
      <small><%= pluralize(post.points, '') %></small>
    </div>
 
      <div class="down">
        <%= link_to post_down_vote_path(post) do %>
        <i class="red triangle down icon "></i>
        <% end %>
      </div>
  </div>
<% else %>
  <div>
    <div class="up">
      <%= link_to new_user_session_path do %>
      <i class="red triangle up icon "></i>
      <% end %>
    </div>

    <div class="points">
      <small><%= pluralize(post.points, '') %></small>
    </div>
 
      <div class="down">
        <%= link_to new_user_session_path do %>
        <i class="red triangle down icon "></i>
        <% end %>
      </div>
  </div>
<% end %>

